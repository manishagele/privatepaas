    <dbConfig name="governance">
        <dataSource>jdbc/<%= @registry_database %></dataSource>
    </dbConfig>

    <remoteInstance url="<%= @greg_url %>">
        <id>governance</id>
        <dbConfig>governance</dbConfig>
        <readOnly>false</readOnly>
        <registryRoot>/</registryRoot>
        <enableCache>true</enableCache>
        <cacheId><%= @registry_user %>@jdbc:mysql://<%= @mysql_server %>:<%= @mysql_port %>/<%= @registry_database %></cacheId>
    </remoteInstance>

    <mount path="/_system/governance" overwrite="true">
        <instanceId>governance</instanceId>
        <targetPath><%= @registry_path %></targetPath>
    </mount>

